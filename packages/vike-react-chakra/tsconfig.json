{
  "include": ["./"],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    // Misc
    "skipLibCheck": true,
    "noErrorTruncation": true,
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Resolution
    "esModuleInterop": true,
    "moduleResolution": "Bundler", // Chakra needs Bundler
    // Libs
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vike-react"],
    // Output
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist/",
    "rootDir": "./",
    "declaration": true,
    // React
    "jsx": "react"
  }
}
